<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:id="@+id/parkingDiagram"
        android:layout_width="146dp"
        android:layout_height="127dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_local_parking_white_48"
        android:paddingBottom="30dp"
        android:text="Parking diagram"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/parkingTips"
        android:layout_width="146dp"
        android:layout_height="127dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/parkingDiagram"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_directions_car_white_48"
        android:paddingBottom="30dp"
        android:text="Parking tips"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gettingHere"
        android:layout_width="146dp"
        android:layout_height="127dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_directions_white_48"
        android:paddingBottom="30dp"
        android:text="getting here"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>