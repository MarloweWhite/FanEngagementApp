<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/TF_location"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Lookup Postcodes"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:onClick="onClick"
        android:text="Search"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.priyanka.mapsdemo.MapsActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/B_hopistals" />

    <Button
        android:id="@+id/B_hopistals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_location"
        android:layout_marginTop="0dp"
        android:background="@color/red"
        android:onClick="onClick"
        android:text="Hospitals"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/B_bars"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TF_location"
        android:layout_toEndOf="@+id/B_hopistals"
        android:background="@color/red"
        android:onClick="onClick"
        android:text="Bars"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/B_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TF_location"
        android:layout_toEndOf="@+id/B_bars"
        android:background="@color/red"
        android:onClick="onClick"
        android:text="Restautants"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/B_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/B_search"
        android:layout_below="@+id/TF_location"
        android:background="@color/red"
        android:onClick="onClick"
        android:text="Home"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>