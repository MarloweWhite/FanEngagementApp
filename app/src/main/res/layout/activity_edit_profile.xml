<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/black">


    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/changeDp"
            android:layout_width="118dp"
            android:layout_height="134dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            />

        <Button
            android:id="@+id/cdButton"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="161dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_button_blue"
            android:text="Change display name" />

        <Button
            android:id="@+id/ceButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="216dp"
            android:text="Change email"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_button_blue"/>

        <Button
            android:id="@+id/cpButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="191dp"
            android:text="Change password"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_button_blue"/>

        <Button
            android:id="@+id/signOut"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="133dp"
            android:text="Signout"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_button_blue"/>

        <Switch
            android:id="@+id/switch3"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/switchComment"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/delete"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="77dp"
            android:text="Delete Account"
            android:background="@drawable/round_button_red"
            />
    </RelativeLayout>




</android.support.v4.widget.DrawerLayout>