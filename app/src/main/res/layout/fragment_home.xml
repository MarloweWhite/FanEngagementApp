<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <Button
        android:id="@+id/purchaseTickets"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/ic_ticket_white_48dp"
        android:paddingBottom="30dp"
        android:text="Purchase tickets"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/myTickets"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/purchaseTickets"
        android:layout_marginEnd="61dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/ic_ticket_white_48dp"
        android:paddingBottom="30dp"
        android:text="My tickets"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/seatingDiagram"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/purchaseTickets"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_event_seat_white_48"
        android:paddingBottom="30dp"
        android:text="Seating diagram"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ticketOffice"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignBaseline="@+id/seatingDiagram"
        android:layout_alignStart="@+id/myTickets"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_phone_white_48"
        android:paddingBottom="30dp"
        android:text="Ticket Office"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/activitySchedule"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignStart="@+id/purchaseTickets"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/ic_twitter_white_48dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="Activity Stream"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gameSchedule"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignStart="@+id/myTickets"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_calendar_today_white_48"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:text="Game Schedule"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>