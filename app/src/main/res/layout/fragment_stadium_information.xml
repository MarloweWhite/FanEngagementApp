<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:id="@+id/amenities"
        android:layout_width="119dp"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_fastfood_white_48"
        android:paddingBottom="30dp"
        android:text="Amenities"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/guestServices"
        android:layout_width="119dp"
        android:layout_height="115dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/amenities"
        android:layout_marginEnd="47dp"
        android:background="@drawable/rounded_button"
        android:text="Guest Services"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:drawableTop="@mipmap/baseline_record_voice_over_white_48"
        android:paddingBottom="30dp"/>

    <Button
        android:id="@+id/faqs"
        android:layout_width="119dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/amenities"
        android:layout_marginTop="185dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_info_white_48"
        android:paddingBottom="30dp"
        android:text="A-Z guide and FQAs"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nearby"
        android:layout_width="119dp"
        android:layout_height="115dp"
        android:layout_alignStart="@+id/guestServices"
        android:layout_alignTop="@+id/faqs"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_near_me_white_48"
        android:paddingBottom="30dp"
        android:text="Near the Stadium"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gettingHere"
        android:layout_width="119dp"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/amenities"
        android:layout_marginBottom="43dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@mipmap/baseline_local_parking_white_48"
        android:paddingBottom="30dp"
        android:text="GettingHere"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stadiumAssistant"
        android:layout_width="119dp"
        android:layout_height="115dp"
        android:layout_alignStart="@+id/guestServices"
        android:layout_alignTop="@+id/gettingHere"
        android:background="@drawable/rounded_button"
        android:text="Stadium Assistant"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:drawableTop="@mipmap/baseline_phone_white_48"
        android:paddingBottom="30dp"/>
</RelativeLayout>